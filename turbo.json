{
    "$schema": "https://turbo.build/schema.json",
    "ui": "stream",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", ".next/**", "out/**"]
        },
        "format": {
            "dependsOn": ["build"],
            "outputs": [],
            "cache": false
        },
        "format:check": {
            "dependsOn": ["build"],
            "outputs": []
        },
        "type-check": {
            "dependsOn": ["format"],
            "outputs": []
        },
        "lint": {
            "dependsOn": ["type-check"],
            "outputs": []
        },
        "test": {
            "dependsOn": ["lint"],
            "outputs": ["coverage/**"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}
