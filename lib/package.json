{
  "name": "openapi-zod-validation",
  "version": "1.18.3",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/jimcresswell/openapi-zod-validation.git"
  },
  "main": "dist/openapi-zod-validation.js",
  "module": "dist/openapi-zod-validation.js",
  "types": "dist/openapi-zod-validation.d.ts",
  "exports": {
    ".": {
      "types": "./dist/openapi-zod-validation.d.ts",
      "import": "./dist/openapi-zod-validation.js"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.js"
    }
  },
  "homepage": "https://github.com/jimcresswell/openapi-zod-validation",
  "bin": {
    "openapi-zod-validation": "./dist/cli.cjs"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsup",
    "dev": "tsup --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit --project tsconfig.lint.json",
    "lint": "eslint . --cache --cache-location .eslintcache",
    "lint:fix": "eslint . --fix --cache --cache-location .eslintcache",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:snapshot": "vitest run --config vitest.snapshot.config.ts",
    "test:snapshot:watch": "vitest --config vitest.snapshot.config.ts",
    "test:scalar-guard": "vitest run --config vitest.scalar-guard.config.ts",
    "character": "vitest run --config vitest.characterisation.config.ts",
    "character:watch": "vitest --config vitest.characterisation.config.ts",
    "fetch:examples": "tsx ./examples-fetcher.mts"
  },
  "license": "MIT",
  "dependencies": {
    "@scalar/json-magic": "0.7.0",
    "@scalar/openapi-parser": "0.23.0",
    "@scalar/openapi-types": "0.5.1",
    "@apidevtools/swagger-parser": "^12.1.0",
    "commander": "^14.0.2",
    "handlebars": "^4.7.8",
    "lodash-es": "^4.17.21",
    "openapi3-ts": "^4.5.0",
    "openapi-types": "^12.1.3",
    "prettier": "^3.6.2",
    "ts-morph": "^27.0.2",
    "ts-pattern": "^5.9.0",
    "zod": "^4.1.12"
  },
  "peerDependencies": {
    "openapi-fetch": "^0.15.0",
    "openapi-typescript": "^7.10.0"
  },
  "peerDependenciesMeta": {
    "openapi-fetch": {
      "optional": true
    },
    "openapi-typescript": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/degit": "^2.8.3",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "degit": "^2.8.4",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-formatter-pretty": "^7.0.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-sonarjs": "^3.0.5",
    "fast-glob": "^3.3.3",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "type-fest": "^5.1.0",
    "typescript": "^5",
    "typescript-eslint": "^8.46.2",
    "vitest": "^4.0.3"
  },
  "files": [
    "src",
    "dist",
    "README.md"
  ],
  "keywords": [
    "openapi",
    "swagger",
    "zod",
    "client",
    "generator",
    "typescript",
    "validation"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  }
}
