{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "rootDir": "."
  },
  "include": [
    "**/*.ts",
    "**/*.cts",
    "**/*.mts",
    "**/*.tsx",
    "test/**/*.ts",
    "tests-transforms/**/*.ts"
  ],
  "exclude": ["node_modules", "**/*.typegen.ts", "example", "dist"]
}
