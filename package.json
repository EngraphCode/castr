  "repository": {
    "type": "git",
    "url": "https://github.com/jimcresswell/openapi-zod-validation.git"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.28.1+sha512.7d7dbbca9e99447b7c3bf7a73286afaaf6be99251eb9498baefa7d406892f67b879adb3a1d7e687fc4ccc1a388c7175fbaae567a26ab44d1067b54fcb0d6a316",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --parallel",
    "type-check": "turbo type-check",
    "lint": "turbo lint",
    "lint:fix": "turbo lint -- --fix",
    "test": "turbo test",
    "test:watch": "turbo test -- --watch",
    "test:snapshot": "turbo test:snapshot",
    "test:gen": "turbo test:gen",
    "character": "turbo character",
    "test:transforms": "turbo test:transforms",
    "test:all": "pnpm test && pnpm character && pnpm test:snapshot && pnpm test:gen && pnpm test:transforms",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml}\"",
    "clean": "turbo clean",
    "fix": "pnpm format && pnpm lint:fix",
    "qg": "pnpm build && pnpm format:check && pnpm type-check && pnpm lint && pnpm test:all",
    "check": "pnpm clean && pnpm install && pnpm fix && pnpm qg",
    "check:ci": "pnpm clean && pnpm install --frozen-lockfile && pnpm qg",
    "fetch:examples": "turbo fetch:examples"
  },
  "license": "MIT",
  "pnpm": {
    "overrides": {
      "esbuild": "0.25.11"
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "ajv": "^8.17.1",
    "ajv-draft-04": "^1.0.0",
    "ajv-formats": "^3.0.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-formatter-pretty": "^7.0.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-sonarjs": "^3.0.5",
    "jiti": "^2.6.1",
    "pnpm": "^10.20.0",
    "prettier": "^3.6.2",
    "tsx": "^4",
    "turbo": "^2.5.8",
    "typescript": "^5",
    "typescript-eslint": "^8.46.2"
  }
}
